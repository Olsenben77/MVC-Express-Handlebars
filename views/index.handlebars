<img class="img-fluid port-image" src="assets/js/sam_jackson.gif" alt="" width="300">

<div class="plate">
    <p class="script"><span>Welcome to </span></p>
    <p class="shadow text1">Big Kahuna </p>
    <p class="shadow text1">Burger </p>
</div>

<h2>That is a tasty burger!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured = true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Clean your plate!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> delete-block devoured = false}}
    {{/if}}
    {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name: &nbsp</label>
        <input type="text" id="ca" name="name">
        <button type="submit">Add a Burger</button>
    </div>

    <div class="form-group">
        <label for="devour"></label><br>
        <input type="radio" name="devoured" value="1" checked> Eaten!<br>
        <input type="radio" name="devoured" value="0"> Not eaten!
    </div>
</form>